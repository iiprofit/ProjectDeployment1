@model IEnumerable<ProjectDeployment1.Models.Registration>

@{
    ViewData["Title"] = "Index";
}

<h4 class="mb-3">Registered Users</h4>
<hr />
@*<p>
    <a asp-action="RegisterUser">Create New</a>
</p>*@
<table class="table">
    <thead class="table-dark">
        <tr>
            <th>
                User Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserEmailId)
            </th>
            <th>
                User Type
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserFullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserEmailId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserType)
            </td>
            <td>
                @*<a asp-action="Edit" asp-route-id="@item.RegistrationId">Edit</a> |*@
                <a asp-action="Details" asp-route-id="@item.RegistrationId"> <label class="text-decoration-none">More Details</label></a> 
                @*<a asp-action="Delete" asp-route-id="@item.RegistrationId">Delete</a>*@
            </td>
        </tr>
}
    </tbody>
</table>
